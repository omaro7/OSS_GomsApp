<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_fileName="bg_full_screen_night.json"
            app:lottie_loop="false"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/signin_layout"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_tarot_result"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="intro_top.json"
                    app:lottie_loop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_below="@+id/lottie_tarot_result"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/app_full_name_2line"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/spoqahansansneolight"
                    />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/signin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="vertical">

                <!-- EditText - Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/text_primary_gray"
                    android:textColorHint="@color/text_primary_gray"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">

                    <EditText
                        android:id="@+id/et_mb_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_primary_gray"
                        android:hint="ID"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- EditText - Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    app:hintTextColor="@color/text_primary_gray"
                    android:textColorHint="@color/text_primary_gray">

                    <EditText
                        android:id="@+id/et_mb_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_primary_gray"
                        android:hint="PASSWORD"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
                <!-- Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_bottom_height"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_round_bottomdialog_rightbtn"
                    android:gravity="center"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:visibility="visible"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>