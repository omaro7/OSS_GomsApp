<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_gray"
    android:foreground="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/llt_field_basic"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 제목 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_title_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="제목"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- 생성일 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_regdate_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="생성일"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_regdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 처리분구 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_local"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_local_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="처리분구"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_local"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 조사자 -->
        <LinearLayout
            android:id="@+id/llt_field_basic_mem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_list_height"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_mem_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="조사자"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_com"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="2222"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_tab_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_margin="2dp"
                    android:text="탭수"
                    android:textColor="@color/text_primary_gray"
                    android:textSize="@dimen/field_list_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="left|center_vertical">
                <TextView
                    android:id="@+id/tv_field_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="1"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/field_list_title"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
